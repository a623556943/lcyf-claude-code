{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "tool == \"Bash\" && tool_input.command matches \"mvn.*test\"",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 长时间测试建议在 tmux 中运行')\""}],
        "description": "Maven 测试提醒"
      },
      {
        "matcher": "tool == \"Bash\" && tool_input.command matches \"mvn.*clean.*package\"",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 多仓库环境：确保在正确的子仓库目录执行构建')\""}],
        "description": "多仓库构建提醒"
      },
      {
        "matcher": "tool == \"Edit\" && tool_input.file_path matches \"pom\.xml$\"",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 修改 pom.xml 时，检查版本依赖是否在 lcyf-dependencies BOM 中统一管理')\""}],
        "description": "pom.xml 编辑提醒"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool == \"Edit\" && tool_input.file_path matches \"\.java$\"",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 已编辑 Java 文件')\""}],
        "description": "Java 文件编辑提醒"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 会话结束')\""}],
        "description": "会话结束提醒"
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": "node -e \"console.error('[Hook] 欢迎使用 LCYF Claude Code - Java 团队智能开发系统')\""}],
        "description": "会话开始欢迎信息"
      }
    ]
  }
}
